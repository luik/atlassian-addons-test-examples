<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2"> 
  <plugin-info> 
    <description>${project.description}</description>  
    <version>${project.version}</version>  
    <vendor name="${project.organization.name}" url="${project.organization.url}"/>  
    <param name="plugin-icon">images/pluginIcon.png</param>  
    <param name="plugin-logo">images/pluginLogo.png</param> 
  </plugin-info>  
  <!-- add our i18n resource -->  
  <resource type="i18n" name="i18n" location="jira_1_custom_field"/>  
  <!-- add our web resources -->  
  <web-resource key="jira_1_custom_field-resources" name="jira_1_custom_field Web Resources"> 
    <dependency>com.atlassian.auiplugin:ajs</dependency>  
    <resource type="download" name="jira_1_custom_field.css" location="/css/jira_1_custom_field.css"/>  
    <resource type="download" name="jira_1_custom_field.js" location="/js/jira_1_custom_field.js"/>  
    <resource type="download" name="images/" location="/images"/>  
    <context>jira_1_custom_field</context> 
  </web-resource>  
  <customfield-type name="My Custom Field" i18n-name-key="my-custom-field.name" key="my-custom-field" class="com.milkneko.dev.jira_1_custom_field.custom_fields.MyCustomField"> 
    <description key="my-custom-field.description">The My Custom Field Plugin</description>  
    <resource name="view" type="velocity" location="/templates/customfields/my-custom-field/view.vm"/>  
    <resource name="edit" type="velocity" location="/templates/customfields/my-custom-field/edit.vm"/> 
  </customfield-type>
</atlassian-plugin>
